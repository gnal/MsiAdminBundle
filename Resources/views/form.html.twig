{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-inline" style="color: #b94a48;">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}

{% block checkbox_widget %}
{% spaceless %}
    <label class="checkbox"><input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />{% if multiple is defined %}{{ label }}{% endif %}</label>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block choice_widget %}
{% spaceless %}
    {% if expanded %}
        <div {{ block('widget_container_attributes') }} class="controls">
        {% for child in form %}
            {{ form_widget(child, {'multiple': 'multiple'}) }}
        {% endfor %}
        </div>
    {% else %}
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value="">{{ empty_value|trans }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('widget_choice_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('widget_choice_options') }}
    </select>
    {% endif %}
{% endspaceless %}
{% endblock choice_widget %}

{% block generic_label %}
{% spaceless %}
    {% if required %}
        {% set attr = attr|merge({'class': attr.class|default('') ~ ' required'}) %}
    {% endif %}
    {% if label != 'Translations' and label|length > 1 %}
        <label class="control-label"{% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>{{ label|trans }}</label>
    {% endif %}
{% endspaceless %}
{% endblock %}

{% block field_row %}
{% spaceless %}
    <div class="{% if form.get('name') != 'settings' %}control-group{% endif %}{% if form.get('errors')|length > 0 %} error{% endif %}">
        {% if form.get('name') != 'settings' %}
            {{ form_label(form, label|default(null)) }}
        {% endif %}
        {% if form.hasChildren == false %}
            <div class="controls">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        {% else %}
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        {% endif %}
    </div>
{% endspaceless %}
{% endblock field_row %}

{% block field_rows %}
{% spaceless %}
    <div class="control-group">
        <div class="controls" style="margin-left: 155px;">{{ form_errors(form) }}</div>
    </div>
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}



{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    {{ block('form_collection_widget') }}
{% endspaceless %}
{% endblock collection_widget %}

{% block form_collection_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        {{ block('collection_field_rows') }}
        {{ form_rest(form) }}
    </div>
{% endspaceless %}
{% endblock form_collection_widget %}

{% block collection_field_rows %}
{% spaceless %}
    {{ form_errors(form) }}
    {% for child in form %}
        <h6 style="margin-left: 160px; border-bottom: 1px solid #eee;">{{ child.get('value').locale }}</h6>
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock collection_field_rows %}
