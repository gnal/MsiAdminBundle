<ul class="breadcrumb">
{% for crumb in breadcrumbs %}
    <li>{% if loop.index != 1 %}<span class="divider"><i class="icon-chevron-right"></i></span>{% endif %}
        {% if crumb.path %}
            <a href="{{ crumb.path }}">{{ crumb.label }}</a>
        {% else %}
            {{ crumb.label }}
        {% endif %}
    </li>
{% endfor %}
</ul>
