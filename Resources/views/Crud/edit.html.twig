{% extends 'MsiAdminBundle::layout.html.twig' %}

{% block title %}{{ 'Edit'|trans }}: {{ admin.entity }} - {{ parent() }}{% endblock title %}

{% block page_title %}
    {{ 'Edit'|trans }}: {{ admin.entity }}
{% endblock %}

{% block content %}
    <form novalidate class="form-horizontal" style="margin-bottom: 0;" action="{{ admin.genUrl('edit', {'id': id}) }}" method="POST" {{ form_enctype(form) }}>
        {% include 'MsiAdminBundle:Crud:form.html.twig' with {'form': form} %}
        <div class="form-actions" style="margin-bottom: 0;">
            <button class="btn btn-primary" type="submit">{{ 'Save Changes'|trans }}</button>
            <a class="btn btn-inverse" href="{{ admin.genUrl('index') }}">{{ 'Cancel'|trans }}</a>
        </div>
    </form>
{% endblock %}

{% block js %}
{{ parent() }}
{% include admin.container.getParameter('msi_admin.tiny_mce') %}
{% endblock js %}
