<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="msi_admin.crud.form.handler" class="Msi\Bundle\AdminBundle\Form\Handler\CrudFormHandler" scope="request">
            <argument type="service" id="request" />
        </service>

        <service id="msi_admin.filter.form.handler" class="Msi\Bundle\AdminBundle\Form\Handler\FilterFormHandler" scope="request">
            <argument type="service" id="request" />
        </service>

        <service id="msi_admin.admin_loader" class="Msi\Bundle\AdminBundle\Routing\AdminLoader">
            <argument />
            <argument type="service" id="service_container" />
            <tag name="routing.loader"></tag>
        </service>

        <service id="msi_admin.entity_manager" factory-service="doctrine" factory-method="getEntityManager" class="Doctrine\ORM\EntityManager" public="false">
        </service>

        <service id="msi_admin.admin" class="Msi\Bundle\AdminBundle\Admin\Admin">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="msi_admin.request_listener" class="Msi\Bundle\AdminBundle\EventListener\RequestListener" scope="request">
            <argument>%msi_admin.locales%</argument>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="acme_hello.twig.extension.debug" class="Twig_Extension_Debug">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
