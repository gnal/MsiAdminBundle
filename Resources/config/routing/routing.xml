<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="msi_admin_dashboard_index" pattern="/{_locale}/admin/">
        <default key="_controller">MsiAdminBundle:Dashboard:index</default>
    </route>

    <route id="msi_admin_main_locale" pattern="/{_locale}/admin/set-language">
        <default key="_controller">MsiAdminBundle:Dashboard:locale</default>
    </route>

    <route id="msi_admin_main_limit" pattern="/change-limit">
        <default key="_controller">MsiAdminBundle:Dashboard:limit</default>
    </route>
</routes>
